@import 'nib'
@import 'normalize.styl'
@import 'slider.styl'
@import 'iconitos.styl'
.u-title
  border-bottom 2px dashed #00DBFF
  color #00DBFF
  font-weight 400
  padding-bottom .5em
  text-align center

.u-containerDefault
  max-width 800px
  margin 0 auto

.MainMenu
  text-align center
  background #1E1E1E
  height auto
  left 0
  position fixed
  right 0
  text-align center
  top 0
  z-index 3
.MainMenu-list
  margin 0
  padding 0

.MainMenu-item
  text-align center
  display inline-block

.MainMenu-link
  text-align center
  color #00DBFF
  font-size 1.25em
  line-height 60px
  margin 0 1.25em
  text-decoration none

.Header
  background-image url('../images/portada.jpg')
  background-position center
  background-repeat no-repeat
  background-size cover
  margin-top 3.75em
  padding 1em 0
  text-align center

.Header-image
  border 5px solid white
  border-radius 50%

.Header-link,
.Header-name
  color white

.Header-link
  font-weight bold
  font-size 2.2em

.Header-name
  font-size 1.5em
  font-weight 300
  margin 0

.Profile
  text-align center

.Profile-link
  background-color orange
  border-radius 1.5em
  color white
  padding .5em 1em
  text-decoration none
  margin-right .5em
  display inline-block
  margin-bottom .5em
  &.twitter
    background-color #3AC6FF
  &.facebook
    background-color #2B2BB1
  &.github
    background-color #313131
.Profile-description
  margin-bottom 1em

.Work
  text-align center

.Work-item
  display inline-block

.Work-imageContainer
  margin 0 2em 1em 0

.Work-description
  color #515151
  font-size 1.1em
  font-style italic

figure
  margin 0 40px
  padding-top 20px
  padding-bottom 20px
.Footer
  background-color #0DC5DF
  background-repeat no-repeat
  background-position center
  image('../images/footer-mejorandola.jpg',w=2014px, h=343px);
  text-align center
  padding 2em 0

.Footer-left
  width auto
  display inline-block
  vertical-align top

.Footer-form
  padding 2em
  width auto
  display inline-block
  vertical-align top

.Footer-title
  color white
  font-weight normal

.Footer-textarea,
.Footer-input
  background white
  border none
  display block
  border-radius 2em
  padding .8em
  outline 0
  margin 0 auto .8em

.Footer-button
  background orange
  border none
  color white
  padding .5em
  border-radius 1.5em
.menu-movil
  background-color #3E3939
  border none
  color white
  border-radius 10px
  padding .5em 1em
  position fixed
  right 20px
  top 20px
  display none
  &.is-active
    display block
.Slider
  background-color black
.Slider-container
  max-width 800px
  margin 0 auto 
@media screen and (max-width 767px)
  .Header
    margin-top 0 
    padding 0 
  .Header-link
    font-size 1.5em
  .MainMenu
    opacity .9
    display none
    &.is-active
      display block
  .MainMenu-item
    display block
  .MainMenu-link
    display block
    margin 0
    &:active
      background-color #ECE8DF
      color black
  .menu-movil
    z-index 4
  .Work-imageContainer
    margin 0 auto
  .Footer-form
    display block
  .Footer-textarea
  .Footer-input
    width 90%
  .Footer-title
    font-size 2em
@media screen and (max-width 480px)
  .Profile
    &-link
      display block
      margin 10px
@media screen and (min-width 768px)
  .menu-movil
    display none